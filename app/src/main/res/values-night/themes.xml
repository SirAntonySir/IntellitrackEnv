<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IntellitrackEnv" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Background Color -->
        <item name="backgroundColor">?android:attr/windowBackground</item>
        <item name="color">@color/TextColorNight</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryNight</item>
        <item name="colorSecondary">@color/secondaryNight</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorAccent">@color/accentNight</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimaryVariant">@color/ListNight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:attr/windowBackground</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Customize your theme here. -->
    </style>
</resources>