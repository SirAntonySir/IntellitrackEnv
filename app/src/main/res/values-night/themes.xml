<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IntellitrackEnv" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <!-- Background Color -->
        <item name="backgroundColor">@color/BackgroundNight</item>
        <item name="color">@color/TextColorNight</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryNight</item>
        <item name="colorSecondary">@color/secondaryNight</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/accentNight</item>
        <item name="colorPrimaryVariant">@color/ListNight</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/BackgroundNight</item>
        <item name="android:windowLightStatusBar">false</item>


        <!-- Customize your theme here. -->
    </style>
</resources>