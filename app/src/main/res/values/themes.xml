<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IntellitrackEnv" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>

        <!-- Background Color -->
        <item name="backgroundColor">@color/BackgroundDay</item>
        <item name="color">@color/TextColorDay</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDay</item>
        <item name="colorSecondary">@color/secondaryDay</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorAccent">@color/accentDay</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/BackgroundDay</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
    </style>
</resources>